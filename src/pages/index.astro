---
import Badge from '../components/Badge.astro';
import Layout from '../layouts/Layout.astro';
import LinkedInIcon from '../components/icons/Linked.In.astro';
import SocialPill from '../components/icons/SocialPill.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import Experience from '../components/Experience.astro';
import Projects from '../components/Projects.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import CodeIcon from '../components/icons/Code.astro';
import PersonIcon from '../components/icons/Person.astro';
import AboutMe from '../components/AboutMe.astro';

---

<Layout 

	title="Porfolio Antonio Plaza - Desarrollador de Software"
	description="Porfolio de Antonio Plaza, Desarrollador de Software Junior en Jaén, España. Explora mis proyectos y habilidades en desarrollo web y software.">
	
	<main class="px-4">

		<SectionContainer class="py-44 pb-10">
		  <div class="flex flex-row items-center gap-x-6 pb-2 lg:pb-4">
			<img 
			  src="/foto-perfil.webp"
			  alt="Foto de Antonio Plaza"
			  class="rounded-full size-24 opacity-80 shadow-lg object-cover"
			  style="object-fit:cover;"
			/>
			<div class="flex flex-col gap-y-2">
			  <div class="flex flex-row items-center gap-x-2">
				<a 
				  href="https://www.linkedin.com/in/antonio-jos%C3%A9-plaza-cuadros-81043b152/" 
				  target="_blank" 
				  rel="noopener"
				  class="flex flex-row items-center gap-x-2 group"
				>
				  <img 
					src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRokEYt0yyh6uNDKL8uksVLlhZ35laKNQgZ9g&s" 
					alt="LinkedIn" 
					class="size-8 rounded-full border-2 border-blue-500 group-hover:scale-110 transition-transform duration-200" 
					style="object-fit:cover;"
				  />
				  <Badge>Buscando empleo</Badge>
				</a>
			  </div>
			</div>
		  </div>
		  <h1 class="text-white text-3xl sm:text-4xl md:text-4xl font-bold pb-4 lg:pb-6 whitespace-nowrap m-0">
			<span class="whitespace-nowrap">Hola, soy Antonio Plaza</span>
		  </h1>
		<h2 class="text-xl lg:text-xl text wrap opacity-80 max-w-[700px]">
			<span class="text-yellow-200">Desarrollador de Software Junior en Jaén, España.</span> Tras casi 10 años en administración y banca, he dado el salto al desarrollo de software, mi verdadera pasión.
		</h2>
		<nav class="flex gap-4 mt-6 mt-8 flex-wrap">
			<SocialPill href="https://www.linkedin.com/in/antonio-jos%C3%A9-plaza-cuadros-81043b152/">
			<LinkedInIcon class="size-4 md: size-6" />
			LinkedIn
			</SocialPill>
			<SocialPill href="https://github.com/AntonioPlaza7/Antonio-Plaza/">
			<GitHubIcon class="size-4 md: size-6" />
			GitHub
			</SocialPill>
		</nav>
		</SectionContainer>

		<SectionContainer id="experience" class="pb-4">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="inline size-6" />
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="projects">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="inline size-6" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="aboutMe">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<PersonIcon class="inline size-6" />
				Sobre mí
			</h2>
			<AboutMe />
		</SectionContainer>
		
		
	</main>
</Layout>


